@model IEnumerable<BookModel>

<div class="container">
    <h1 class="display-5">All Books</h1>
    <div class="row">
        @foreach (var book in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm border-0 rounded-0">
                    <img src="~/images/dark.jpg" />
                    <div class="card-body">
                        <h5 class="card-title">@book.Title</h5>
                        <p class="card-text">@book.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a asp-action="GetBook" asp-route-id="@book.Id" class="btn btn-sm btn-outline-dark">Book Details</a>
                            </div>
                            <small class="text-muted">@book.Author</small>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>